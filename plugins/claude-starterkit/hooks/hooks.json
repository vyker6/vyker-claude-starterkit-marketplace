{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh",
            "async": false
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-branch.sh",
            "async": false
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-branch-naming.sh",
            "async": false
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-stale-branch.sh",
            "async": false
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "A file was just written or edited. Check the tool_input for the file path. If it is an implementation file (not a test, config, doc, or asset), check whether a corresponding test file likely exists in the project (common patterns: foo.test.ts, foo.spec.ts, test_foo.py, etc.). If no test file likely exists, respond with a brief nudge reminding the developer to write tests for this file before running /teampush. If it IS a test file, or a non-implementation file, or a test likely exists, say nothing. Keep any nudge to one short sentence."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/gate-push.sh",
            "async": false
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/lint-commit-msg.sh",
            "async": false
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/warn-large-diff.sh",
            "async": false
          }
        ]
      }
    ]
  }
}
